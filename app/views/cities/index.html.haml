.main{:role => "main"}
  %section.page-top
    .container
      .row
        .col-md-12
          %ul.breadcrumb
            %li
              %a{:href => "/"} Home
            %li.active Cities
      .row
        .col-md-12
          %h2 Cities

.container
  .row
    .col-md-12
    
%h1 Cities

%table.table.table-hover.table-striped
  %thead
    %tr
      %th Name
      %th County
      %th State
      %th
      %th
      %th

  %tbody
    - @cities.each do |city|
      %tr
        %td= city.name
        %td= city.county
        %td= city.state_id
        %td= link_to 'Show', city, class: 'btn btn-info'
        %td= link_to 'Edit', edit_city_path(city), class: 'btn btn-default'
        %td= link_to 'Destroy', city, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New City', new_city_path, class: 'btn btn-primary btn-lg'
